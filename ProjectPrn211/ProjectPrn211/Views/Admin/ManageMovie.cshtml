@model IEnumerable<ProjectPrn211.Models.Movie>
@{
    Layout = "LayoutAdmin";
}


<div class="d-flex container-fluid justify-content-center">
    <div class="w-75 mt-5">
           <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("AddMovie", "Admin")'">
            Add New Movie
        </button>
        @if (Model != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">MovieID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Year</th>
                        <th scope="col">Image</th>
                        <th scope="col">Description</th>
                        <th scope="col">GenreID</th>
                        <th class="text-center" scope="col">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.MovieId</th>
                            <td>@item.Title</td>
                            <td>@item.Year</td>
                            <td><img src="@item.Image" width="50px" height="50px"></td>
                            <td>@item.Description</td>
                            <td>@item.GenreId</td>
                            <td class="justify-content-center text-center">
                                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("DeleteMovie", "Admin", new { id = item.MovieId})'">
                                    Delete
                                </button>
                                <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("EditMovie", "Admin", new { id = item.MovieId})'">
                                    Edit
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
